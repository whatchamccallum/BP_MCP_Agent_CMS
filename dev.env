# Flask environment
FLASK_ENV=development
FLASK_APP=app.py
FLASK_DEBUG=1

# Security
SECRET_KEY=development-key-change-in-production
JWT_SECRET_KEY=jwt-secret-key-change-in-production

# Database
DATABASE_TYPE=sqlite
DATABASE_NAME=bp_mcp_agent_cms.db

# Storage
STORAGE_TYPE=local
STORAGE_BASE_DIR=./storage_files

# Breaking Point MCP Agent
BP_MCP_AGENT_HOST=localhost
BP_MCP_AGENT_PORT=5000
BP_MCP_AGENT_USERNAME=admin
BP_MCP_AGENT_PASSWORD=admin

